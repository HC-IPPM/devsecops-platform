{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":dependencyDashboard",
    ":semanticCommits",
    ":semanticCommitScopeDisabled"
  ],
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "flux": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"
    ]
  },
  "packageRules": [
    {
      "description": 'Ignore digest for capacitor',
      "matchPackageNames": [
        'ghcr.io/gimlet-io/capacitor-manifests',
      ],
      "autoReplaceStringTemplate": "{{#if newValue}}{{newValue}}{{/if}}",
      pinDigest: {
        enabled: false,
      },
    },
  ],
}
